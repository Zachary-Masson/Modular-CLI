import { Button, ButtonBuilder, ButtonStyle, IsExecutor, Core, ExportButton, Discord } from "@zachary_masson/modular-core";

const button = new ButtonBuilder();
button.setCustomId("$customId");
button.setLabel("$label");
button.setStyle(ButtonStyle.$style);
$url

@Button(button)
class $nameOfClass {
    export() {ExportButton(button)}

    @IsExecutor()
    exec(core: Core, client: Discord.Client<true>, interaction: Discord.ButtonInteraction) {
        return interaction.reply({
            content: "The button is alive !",
            ephemeral: true
        });
    }

}

export = $nameOfClass